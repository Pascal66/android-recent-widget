<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="WidgetEventImage">
    	<item name="android:layout_gravity">top|right</item>
    	<item name="android:layout_width">15dip</item>
    	<item name="android:layout_height">15dip</item>
    	<item name="android:layout_marginTop">8dip</item>
    </style>

	<style name="WidgetEventImage1" parent="WidgetEventImage">
    	<item name="android:layout_marginRight">2dip</item>
	</style>    

	<style name="WidgetEventImage2" parent="WidgetEventImage">
    	<item name="android:layout_marginRight">18dip</item>
	</style>    

	<style name="WidgetEventImage3" parent="WidgetEventImage">
    	<item name="android:layout_marginRight">34dip</item>
	</style>    

    <style name="WidgetFrame">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:padding">1dip</item>
    	<item name="android:layout_weight">1</item>
    </style>

    <style name="WidgetContactButton">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:padding">1dip</item>
    	<item name="android:layout_margin">1dip</item>
    	<item name="android:scaleType">fitCenter</item>
    	<item name="android:layout_gravity">center_horizontal|center_vertical</item>
    	<item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PopupEventGroup">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:orientation">horizontal</item>
    	<item name="android:gravity">top</item>
    	<item name="android:paddingBottom">5dip</item>
    </style>

    <style name="PopupEventButton">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="PopupEventTable">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PopupEventTableHeader">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:textStyle">bold</item>
    </style>

</resources>