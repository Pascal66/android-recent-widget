<?xml version="1.0" encoding="utf-8"?>
	<!--
		http://developer.android.com/guide/topics/appwidgets/index.html A
		RemoteViews object (and, consequently, an App Widget) can support the
		following layout classes: FrameLayout,LinearLayout,RelativeLayout And
		the following widget classes (Descendants of these classes are not
		supported):

		AnalogClock,Button,Chronometer,ImageButton,ImageView,ProgressBar,TextView
	-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/widget_background" android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:paddingLeft="14dp">

	<!-- TODO: Add a default "initializing" message... -->

	<!--
		TODO: How to create those dynamically in the RemoteViews? (Requires
		API-7!) Note: might use "include" but then how to access duplicate
		IDs?
	-->

	<!-- TODO: create onPressed drawables for better visual -->

	<FrameLayout android:layout_width="fill_parent"
		android:padding="5dip" android:layout_weight="1"
		android:layout_height="fill_parent">

		<!--
			ImageView for displaying contact pic. Button for actually pressing on
			it.
		-->

		<ImageButton android:id="@+id/contactButton01" android:layout_margin="3dip"
			android:scaleType="fitCenter" android:layout_width="fill_parent"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_height="fill_parent" android:background="@android:color/transparent" />

		<!-- Name of the contact -->

		<TextView android:id="@+id/contactLabel01" android:textColor="#ffffff"
			android:background="@drawable/widget_label_box" android:textSize="12dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="bottom|center_horizontal" android:maxLines="2"
			android:ellipsize="end"
			android:gravity="center_horizontal" />

	</FrameLayout>

	<FrameLayout android:layout_width="fill_parent"
		android:padding="5dip" android:layout_weight="1"
		android:layout_height="fill_parent">

		<!--
			ImageView for displaying contact pic. Button for actually pressing on
			it.
		-->

		<ImageButton android:id="@+id/contactButton02" android:layout_margin="3dip"
			android:scaleType="fitCenter" android:layout_width="fill_parent"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_height="fill_parent" android:background="@android:color/transparent" />

		<!-- Name of the contact -->

		<TextView android:id="@+id/contactLabel02" android:textColor="#ffffff"
			android:background="@drawable/widget_label_box" android:textSize="12dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="bottom|center_horizontal" android:maxLines="2"
			android:ellipsize="end"
			android:gravity="center_horizontal" />

	</FrameLayout>

	<FrameLayout android:layout_width="fill_parent"
		android:padding="5dip" android:layout_weight="1"
		android:layout_height="fill_parent">

		<!--
			ImageView for displaying contact pic. Button for actually pressing on
			it.
		-->

		<ImageButton android:id="@+id/contactButton03" android:layout_margin="3dip"
			android:scaleType="fitCenter" android:layout_width="fill_parent"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_height="fill_parent" android:background="@android:color/transparent" />

		<!-- Name of the contact -->

		<TextView android:id="@+id/contactLabel03" android:textColor="#ffffff"
			android:background="@drawable/widget_label_box" android:textSize="12dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="bottom|center_horizontal" android:maxLines="2"
			android:ellipsize="end"
			android:gravity="center_horizontal" />

	</FrameLayout>

	<!-- "Next contacts" button -->
	<FrameLayout android:layout_width="fill_parent"
		android:padding="5dip" android:layout_weight="1.025"
		android:layout_height="fill_parent">

		<!-- Button for displaying the next contacts -->
		<Button android:text="@string/nextButtonText" android:textSize="12dip"
			android:textColor="#ffffff" android:paddingBottom="10dip"
			android:background="@android:color/transparent" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:gravity="center_vertical|center_horizontal"
			android:id="@+id/nextButton" />

		<TextView android:id="@+id/widgetPager" android:layout_width="fill_parent"
			android:textSize="10dip" android:text="./." android:paddingTop="15dip"
			android:gravity="center_vertical|center_horizontal"
			android:textColor="#ffffff" android:layout_height="fill_parent" />

	</FrameLayout>

</LinearLayout>
