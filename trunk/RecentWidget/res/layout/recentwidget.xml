<?xml version="1.0" encoding="utf-8"?>
	<!--
		http://developer.android.com/guide/topics/appwidgets/index.html A
		RemoteViews object (and, consequently, an App Widget) can support the
		following layout classes: FrameLayout,LinearLayout,RelativeLayout And
		the following widget classes (Descendants of these classes are not
		supported):

		AnalogClock,Button,Chronometer,ImageButton,ImageView,ProgressBar,TextView
	-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/widget_background"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:paddingLeft="14dp">

	<!-- TODO: Add a default "initializing" message... -->

	<!--
		TODO: How to create those dynamically in the RemoteViews? (Requires
		API-7!)
	-->

	<!-- TODO: create onPressed drawables for better visual -->

	<AbsoluteLayout android:layout_width="fill_parent"
		android:padding="10dip" android:layout_weight="25"
		android:layout_height="fill_parent">

		<!-- ImageView for displaying contact pic -->
		<ImageView android:id="@+id/contactSrc01" android:scaleType="centerCrop"
			android:layout_width="fill_parent" android:layout_height="fill_parent" />

		<!-- Button for displaying name -->
		<Button android:background="@android:color/transparent"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:gravity="bottom|center_horizontal" android:id="@+id/contactButton01" />

	</AbsoluteLayout>

	<AbsoluteLayout android:layout_width="fill_parent"
		android:padding="10dip" android:layout_weight="25"
		android:layout_height="fill_parent">

		<!-- ImageView for displaying contact pic -->
		<ImageView android:id="@+id/contactSrc02" android:scaleType="centerCrop"
			android:layout_width="fill_parent" android:layout_height="fill_parent" />

		<!-- Button for displaying name -->
		<Button android:background="@android:color/transparent"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:gravity="bottom|center_horizontal" android:id="@+id/contactButton02" />

	</AbsoluteLayout>

	<AbsoluteLayout android:layout_width="fill_parent"
		android:padding="10dip" android:layout_weight="25"
		android:layout_height="fill_parent">

		<!-- ImageView for displaying contact pic -->
		<ImageView android:id="@+id/contactSrc03" android:scaleType="centerCrop"
			android:layout_width="fill_parent" android:layout_height="fill_parent" />

		<!-- Button for displaying name -->
		<Button android:background="@android:color/transparent"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:gravity="bottom|center_horizontal" android:id="@+id/contactButton03" />

	</AbsoluteLayout>

	<!-- "Next contacts" button -->
	<LinearLayout android:layout_width="fill_parent"
		android:padding="10dip" android:orientation="vertical"
		android:gravity="center_vertical" android:layout_weight="25"
		android:layout_height="fill_parent">

		<TextView android:id="@+id/widgetPager" android:layout_width="fill_parent"
			android:gravity="center_vertical|center_horizontal"
			android:textColor="#000000" android:layout_height="wrap_content" />

		<!-- Button for displaying the next contacts -->
		<Button android:text="@string/nextButtonText"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:gravity="center_vertical|center_horizontal" android:id="@+id/nextButton" />

	</LinearLayout>

</LinearLayout>
